FROM node:18-bullseye

# Install build tools needed for node-gyp (swisseph native binding)
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Clone the astrology API
RUN git clone https://github.com/ryuphi/astrology-api.git .

# Install dependencies (includes native swisseph compilation)
RUN npm install

EXPOSE 3000

CMD ["npm", "start"]
